{
  "compilerOptions": {
    "typeRoots":[
      "./@types",
      "./node_modules/@types",
    ],
    "target": "ESNext", 
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true ,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["dist"]
}
